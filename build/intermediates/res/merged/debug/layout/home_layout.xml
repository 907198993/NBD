<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.app.FragmentTabHost 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:clipToPadding="true"
    android:background="@color/white"
    android:id="@android:id/tabhost"
    android:orientation="vertical" >
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">
        <FrameLayout 
	        android:layout_width="fill_parent"
	        android:layout_height="0dp"
	        android:layout_weight="1"
	        android:id="@android:id/tabcontent"/>
        <TabWidget
            android:id="@android:id/tabs"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.0"
            android:visibility="gone" />
        
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tab_layout"
            android:orientation="horizontal">
            <RelativeLayout 
                android:layout_width="0dp"
                android:layout_weight="1"
                android:id="@+id/msg_layout"
                android:layout_height="wrap_content">
                <ImageView 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tab_one_icon"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/msg_chating_select"/>
                <TextView 
                    android:id="@+id/tab_one_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@id/tab_one_icon"
                    android:text="消息"/>
                    <!-- android:textColor="@color/helper_blue" -->
                    
                 <FrameLayout
			        android:id="@+id/total_count_layout"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_marginLeft="-5dp"
			        android:layout_toRightOf="@id/tab_one_icon"
			        android:orientation="vertical"
			        android:gravity="center"
			        android:visibility="invisible">
			        <ImageView 
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:src="@drawable/all_circle"/>
			        <TextView
			            android:id="@+id/total_msg_count"
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:layout_gravity="center"
			            android:textSize="8sp"
			            android:textColor="@color/white"
			            android:gravity="center"/>
			     </FrameLayout>
                
            </RelativeLayout>
            
            <LinearLayout 
                android:layout_width="0dp"
                android:layout_weight="1"
       			android:layout_height="wrap_content"
       			android:gravity="center"
       			android:id="@+id/contact_layout"
       			android:orientation="vertical">
                <ImageView 
                    android:layout_marginTop="5dp"
                    android:id="@+id/tab_two_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/nav_contact"/>
                <TextView 
                    android:layout_marginTop="5dp"
                    android:id="@+id/tab_two_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="客户管理"/>
            </LinearLayout>
            
              <LinearLayout 
                android:layout_width="0dp"
                android:layout_weight="1"
       			android:layout_height="wrap_content"
       			android:gravity="center"
       			android:id="@+id/set_layout"
       			android:orientation="vertical">
                <ImageView 
                    android:layout_marginTop="5dp"
                    android:id="@+id/tab_three_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/nav_set"/>
                <TextView 
                    android:layout_marginTop="5dp"
                    android:id="@+id/tab_three_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="设置"/>
            </LinearLayout>
        </LinearLayout>
        
    </LinearLayout>

</android.support.v4.app.FragmentTabHost>
