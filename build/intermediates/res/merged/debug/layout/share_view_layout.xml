<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:background="#9000">
    
	<LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/share_layout"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:orientation="vertical" >

       

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="70dp"
            android:background="@null"
            android:orientation="horizontal" >

            <RelativeLayout
                android:id="@+id/share_id_sina_weibo_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_weight="1" >

                <ImageView
                    android:id="@+id/sina_icon"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/share_sina_icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/sina_icon"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="4dp"
                    android:text="新浪微博"
                    android:textColor="@color/black" />
            </RelativeLayout>

            <ImageView
                android:layout_width="2px"
                android:layout_height="fill_parent"
                android:background="@drawable/share_cost_diver" />

            <RelativeLayout
                android:id="@+id/share_id_tencent_weibo_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_weight="1" >

                <ImageView
                    android:id="@+id/tent_icon"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/share_tencent_icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tent_icon"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="4dp"
                    android:text="腾讯微博"
                    android:textColor="@color/black" />
            </RelativeLayout>

            <ImageView
                android:layout_width="2px"
                android:layout_height="fill_parent"
                android:background="@drawable/share_cost_diver" />

            <RelativeLayout
                android:id="@+id/share_id_qq_zone_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_weight="1" >

                <ImageView
                    android:id="@+id/qzone_icon"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/share_qzone_icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/qzone_icon"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="4dp"
                    android:text="QQ空间"
                    android:textColor="@color/black" />
            </RelativeLayout>
        </LinearLayout>

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="2px"
            android:background="@drawable/share_hengxian" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="70dp"
            android:background="@null"
            android:orientation="horizontal" >

            <RelativeLayout
                android:id="@+id/share_id_wechat_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_weight="1.00" >

                <ImageView
                    android:id="@+id/wechat_icon"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/share_wechat_icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/wechat_icon"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="4dp"
                    android:text="微信好友"
                    android:textColor="@color/black" />
            </RelativeLayout>

            <ImageView
                android:layout_width="2px"
                android:layout_height="fill_parent"
                android:background="@drawable/share_cost_diver" />

            <RelativeLayout
                android:id="@+id/share_id_wechat_moments_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_weight="1" >

                <ImageView
                    android:id="@+id/wechat_friend_icon"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/share_wechat_timeline_icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/wechat_friend_icon"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="4dp"
                    android:text="朋友圈"
                    android:textColor="@color/black" />
            </RelativeLayout>

            <ImageView
                android:layout_width="2px"
                android:layout_height="fill_parent"
                android:background="@drawable/share_cost_diver" />

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:visibility="invisible" >

                <ImageView
                    android:id="@+id/icon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerHorizontal="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/icon"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="4dp"
                    android:textColor="@color/black" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
