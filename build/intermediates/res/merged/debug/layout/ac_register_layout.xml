<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    
    <ImageView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/register_logo"
        android:scaleType="center"
        android:layout_marginTop="@dimen/register_margin_top"
        android:layout_centerHorizontal="true"/>
    
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="@dimen/register_item_layout_height"
        android:id="@+id/phone_layout"
        android:layout_below="@id/register_logo"
        android:layout_marginLeft="@dimen/register_item_layout_margin"
        android:layout_marginRight="@dimen/register_item_layout_margin"
        android:layout_marginTop="10dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:gravity="center_vertical"
        android:background="@drawable/shape_login_item_bg">
        <ImageView 
            android:layout_width="22dp"
            android:layout_height="wrap_content"
            android:src="@drawable/register_phone"
            android:scaleType="center"
            android:layout_marginLeft="@dimen/register_margin_left"/>
        
        <ImageView 
            android:layout_width="1px"
            android:layout_height="fill_parent"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="@dimen/register_margin_left"
            android:background="#999"/>
        <EditText 
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/register_phone"
            android:inputType="phone"
            android:maxLength="11"
            android:layout_marginLeft="@dimen/register_margin_left"
            android:hint="请输入手机号码"
            android:textColorHint="#3b3b3b"
            android:textSize="@dimen/text_size14"
            android:background="@null"/>
    </LinearLayout>
    
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="@dimen/register_item_layout_height"
        android:id="@+id/email_layout"
        android:layout_below="@id/phone_layout"
        android:layout_marginLeft="@dimen/register_item_layout_margin"
        android:layout_marginRight="@dimen/register_item_layout_margin"
        android:layout_marginTop="@dimen/register_margin_top"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:gravity="center_vertical"
        android:background="@drawable/shape_login_item_bg">
        <ImageView 
            android:layout_width="22dp"
            android:layout_height="wrap_content"
            android:src="@drawable/register_email"
            android:scaleType="center"
            android:layout_marginLeft="@dimen/register_margin_left"/>
        
        <ImageView 
            android:layout_width="1px"
            android:layout_height="fill_parent"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="@dimen/register_margin_left"
            android:background="#999"/>
        <EditText 
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/register_email1"
            android:inputType="textEmailAddress"
            android:layout_marginLeft="@dimen/register_margin_left"
            android:hint="请输入邮箱"
            android:singleLine="true"
            android:maxLength="22"
            android:textColorHint="#3b3b3b"
            android:textSize="@dimen/text_size14"
            android:background="@null"/>
    </LinearLayout>
   
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="@dimen/register_item_layout_height"
        android:id="@+id/password_layout"
        android:layout_below="@id/email_layout"
        android:layout_marginLeft="@dimen/register_item_layout_margin"
        android:layout_marginRight="@dimen/register_item_layout_margin"
        android:layout_marginTop="@dimen/register_margin_top"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:gravity="center_vertical"
        android:background="@drawable/shape_login_item_bg">
        <ImageView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/register_password"
            android:scaleType="center"
            android:layout_marginLeft="@dimen/register_margin_left"/>
        
        <ImageView 
            android:layout_width="1px"
            android:layout_height="fill_parent"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="@dimen/register_margin_left"
            android:background="#999"/>
        <EditText 
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/register_password1"
            android:inputType="textPassword"
            android:layout_marginLeft="@dimen/register_margin_left"
            android:hint="请输入密码"
            android:maxLength="16"
            android:textSize="@dimen/text_size14"
            android:textColorHint="#3b3b3b"
            android:background="@null"/>
    </LinearLayout>
    
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="@dimen/register_item_code_layout_height"
        android:id="@+id/code_layout"
        android:orientation="horizontal"
        android:layout_below="@id/password_layout"
        android:layout_marginLeft="@dimen/register_item_layout_margin"
        android:layout_marginRight="@dimen/register_item_layout_margin"
        android:layout_marginTop="@dimen/register_margin_top"
        android:gravity="center_vertical"
        android:visibility="gone">
        <EditText 
            android:layout_width="@dimen/register_item_code_layout_width"
            android:layout_height="fill_parent"
            android:id="@+id/register_code"
            android:hint="手机验证码"
            android:textSize="@dimen/text_size14"
            android:gravity="center"
            android:maxLength="8"
            android:textColorHint="#3b3b3b"
       />
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/register_margin_left"
            android:text="点此获取验证码"
         />
    </LinearLayout>
    
            <Button
                android:id="@+id/register"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/register_item_code_layout_height"
                android:layout_marginBottom="@dimen/register_margin_top"
                android:layout_marginLeft="@dimen/register_item_layout_margin"
                android:layout_marginRight="@dimen/register_item_layout_margin"
                android:layout_marginTop="@dimen/register_margin_top"
                android:background="@drawable/login_reg"
                android:gravity="center"
                android:text="@string/register_"
                android:layout_below="@id/code_layout"
                android:textColor="@color/white"/>
            <Button
                android:id="@+id/login_"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/register_item_code_layout_height"
                android:layout_marginBottom="@dimen/register_margin_top"
                android:layout_marginLeft="@dimen/register_item_layout_margin"
                android:layout_marginRight="@dimen/register_item_layout_margin"
                android:background="@drawable/login_reg"
                android:gravity="center"
                android:text="@string/login_"
                android:layout_below="@id/register"
                android:textColor="@color/white"/>

</RelativeLayout><!-- From: file:/D:/ASTEST/as/NBD/res/layout/ac_register_layout.xml -->